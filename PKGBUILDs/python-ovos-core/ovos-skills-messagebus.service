[Unit]
Description=OVOS Skills Messagebus Service
PartOf=ovos.service
After=ovos.service
After=ovos-messagebus.service

[Service]
User=ovos
Group=ovos
Type=notify
WorkingDirectory=/home/ovos
Environment=PYTHONUNBUFFERED=1
ExecStart=/usr/bin/python /etc/systemd/system/ovos-skills-messagebus.d/ovos-systemd_skills_messagebus.py
StandardOutput=journal
TimeoutStartSec=2m
TimeoutStopSec=1m
Restart=on-failure
StartLimitInterval=5min
StartLimitBurst=4
#StartLimitAction=reboot-force
#WatchdogSec=30s

[Install]
WantedBy=ovos.service