'python-requests>=2.26' #<3.0,>=2.26 \
'python-watchdog>=2.1' #<3.0,>=2.1 \
)
conflicts=( 'python-adapt-parser>=2.0.0' \
 'python-combo-lock>=0.3' \
 'python-ovos-backend-client>=0.1.0' \
 'python-ovos-bus-client>=0.1.0' \
